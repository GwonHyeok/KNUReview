<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">
    <ImageView
        android:id="@+id/splashImg"
        android:layout_width="@dimen/splash_image_width"
        android:layout_height="@dimen/splash_image_height"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/splash" />

    <TextView
        android:id="@+id/appTitleEng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/splash_margin_top"
        android:layout_alignTop="@id/splashImg"
        android:layout_centerHorizontal="true"
        android:text="KNU Review"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/splash_text_size" />
    </RelativeLayout>

    <TextView
        android:id="@+id/appCopyRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="ⓒ강남대 리뷰 Corp."
        android:textColor="@color/white"
        android:textSize="12dp" />

</RelativeLayout>